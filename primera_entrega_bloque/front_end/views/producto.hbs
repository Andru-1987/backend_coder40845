{{>header}}

<div class="container text-center">
    <div class="row">
        
        {{>form.creacion}}

        <div class="col-6 align-self-center" id="producto"> 
                <div class="card" >
                <img src="{{this.producto.thumbnail}}" class="card-img-top" alt="{{this.producto.nombre}}">
                <div class="card-body">
                    <p>Producto : {{this.producto.nombre}}</p>
                    <p>Precio: ${{this.producto.precio}}</p>
                </div>
            </div>
        
        </div>
    </div>
</div>

